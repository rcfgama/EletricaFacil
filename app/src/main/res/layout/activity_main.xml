<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorSecondary"
    tools:context=".view.MainActivity">

    <TextView
        android:id="@+id/text_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Hello World!"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" 
        app:layout_constraintVertical_bias="0.02"/>

    <TextView
        android:id="@+id/text_tipo_ambiente"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tipo_do_ambiente"
        android:textColor="@color/colorPrimarylight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.08" />

    <RadioGroup
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.19">

        <RadioButton
            android:id="@+id/radio_ambiente_comum"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:checked="true"
            android:text="@string/ambientes_comuns"
            android:textColor="@color/colorPrimarylight" />

        <RadioButton
            android:id="@+id/radio_bancadas"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/bancadas"
            android:textColor="@color/colorPrimarylight" />

        <RadioButton
            android:id="@+id/radio_menor_circulacao"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/reas_de_menor_circula_o"
            android:textColor="@color/colorPrimarylight" />

        <RadioButton
            android:id="@+id/radio_home_office"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/home_office"
            android:textColor="@color/colorPrimarylight" />

        <RadioButton
            android:id="@+id/radio_ler_escrever"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/escrever_ler"
            android:textColor="@color/colorPrimarylight" />
    </RadioGroup>

    <TextView
        android:id="@+id/text_comprimento"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/comprimento_do_ambiente_m"
        android:textColor="@color/colorPrimarylight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49" />

    <EditText
        android:id="@+id/edit_comprimento"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@color/colorPrimarylight"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.49" />

    <TextView
        android:id="@+id/text_largura"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/largura_do_ambiente_m"
        android:textColor="@color/colorPrimarylight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.56" />

    <EditText
        android:id="@+id/edit_largura"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@color/colorPrimarylight"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.56" />

    <TextView
        android:id="@+id/text_quantidade"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/quantidade_de_l_mpadas"
        android:textColor="@color/colorPrimarylight"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.05"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.63" />

    <EditText
        android:id="@+id/edit_quantidade"
        android:layout_width="80dp"
        android:layout_height="40dp"
        android:background="@color/colorPrimarylight"
        android:ems="10"
        android:inputType="numberDecimal"
        android:textAlignment="center"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.9"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.63" />
    
    <Button
        android:id="@+id/button_calculate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/calcular"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.82"/>

</androidx.constraintlayout.widget.ConstraintLayout>